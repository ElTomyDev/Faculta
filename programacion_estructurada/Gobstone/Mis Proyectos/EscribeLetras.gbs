#Maneras de pintar el escenario
procedure PintarColumna(alto){
    repeat (alto){
        PonerColores()
        Mover(Norte)
    }
    PonerColores()
    IrAlBorde(Sur)
}

procedure PintarFila(largo){
    repeat (largo){
        PonerColores()
        Mover(Este)
    }
    PonerColores()
    IrAlBorde(Sur)
}

procedure PintarDejandoUnEspacio(espacioDejado,hacia){
    repeat (espacioDejado){
        Mover(hacia)
    }
    PonerColores()
    IrAlBorde(Sur)
}

procedure DejarEspacio(cantidadDeEspacio,hacia){
    repeat (cantidadDeEspacio){
        Mover(hacia)
    }
}

#Poner o sacar varios colores
procedure PonerColores(){
    coloresParaEldibujo := [Azul,Negro,Rojo,Verde]
    foreach colores in coloresParaEldibujo{
       Poner(colores)
    }
}

procedure SacarColores(){
    coloresParaEldibujo := [Azul,Negro,Rojo,Verde]
    foreach colores in coloresParaEldibujo{
        Sacar(colores)
    }
}
