#Ejercicio 6

type Persona is record{
    
    field dni //string
    field domicilio //string
    field donante //booleano
    
}

type Empleado is record{
    
    field dni //string
    field domicilio //String
    field donante //booleano
    
    field puestoDeEmpresa //Puesto
    field sueldo //numero
}

type Puesto is variant {
    /*
        PROPÃ“SITO: Modelar los diferentes puestos que hay
                   dentro de una empresa de software
    */
    case GestorDeProyecto {}
    case LiderDeProyecto {}
    case Desarrollador {}
    case Operador {}
}

# Punto (A)
function empleado_ConSueldoActualizadoA_(empleado, nuevoSueldo){
    return(
        Empleado(
            dni <- dni(empleado),
            domicilio <- domicilio(empleado),
            donante <- donante(empleado),
            
            puestoDeEmpresa <- puestoDeEmpresa(empleado),
            sueldo <- nuevoSueldo
            )
        )
}

# Punto (B)
function empleado_ConNuevoPuesto_(empleado, nuevoPuesto){
    return(
        Empleado(
            dni <- dni(empleado),
            domicilio <- domicilio(empleado),
            donante <- donante(empleado),
            
            puestoDeEmpresa <- nuevoPuesto,
            sueldo <- sueldo(empleado)
            )
        )
}

# Punto (C)
function categoriaDelPuesto_(puesto){
    return(
        choose
            4 when (puesto == GestorDeProyecto)
            3 when (puesto == LiderDeProyecto)
            2 when (puesto == Desarrollador)
            1 otherwise
        )
}

# Punto (D)
function empleadoConMayorCargoEntre_Y_(empleado1, empleado2){
    return(
        choose
            empleado1 when (categoriaDelPuesto_(puestoDeEmpresa(empleado1)) > categoriaDelPuesto_(puestoDeEmpresa(empleado2)))
            empleado2 otherwise
        )
}

# Punto (E)
function tienenIgualSueldo_Y_(empleado1, empleado2){
    return(
        choose
            True when (sueldo(empleado1) == sueldo(empleado2))
            False otherwise
        )
}

# Punto (F)
function empleado_ConAumentoEn_PorBonoDeFinalizacionDeProyecto(empleado, aumento){
    
    aumentoResivido := (sueldo(empleado) * aumento) div 100
    
    return(
        Empleado(
            dni <- dni(empleado),
            domicilio <- domicilio(empleado),
            donante <- donante(empleado),
                
            puestoDeEmpresa <- puestoDeEmpresa(empleado),
            sueldo <- sueldo(empleado) + aumentoResivido
        )
    )
}

# Punto (G)
function empleado_ConDomicilioActualizadoA_(empleado, nuevoDomicilio){
    return(
        Empleado(
            dni <- dni(empleado),
            domicilio <- nuevoDomicilio,
            donante <- donante(empleado),
                
            puestoDeEmpresa <- puestoDeEmpresa(empleado),
            sueldo <- sueldo(empleado)
        )
    )
}






