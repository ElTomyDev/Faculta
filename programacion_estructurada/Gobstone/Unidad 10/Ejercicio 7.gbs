# Ejercicio 7

type Fechas is record{
    field dia //Numero
    field mes //Mes
    field año //Numero
}

type Mes is variant{
    case Enero {}
    case Febrero {}
    case Marzo {}
    case Abril {}
    case Mayo {}
    case Junio {}
    case Julio {}
    case Agosto {}
    case Septiembre {}
    case Octubre {}
    case Noviembre {}
    case Diciembre {}
}

