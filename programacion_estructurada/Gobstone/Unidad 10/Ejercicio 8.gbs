program{
    miFecha := Fechas(
        dia <- 31,
        mes <- Diciembre,
        año <- 2004
        )
    
    EscribirFecha_(miFecha)    
    
}

#Ejercicio 8

type Fechas is record{
    field dia //Numero
    field mes //Mes
    field año //Numero
}

type Mes is variant{
    case Enero {}
    case Febrero {}
    case Marzo {}
    case Abril {}
    case Mayo {}
    case Junio {}
    case Julio {}
    case Agosto {}
    case Septiembre {}
    case Octubre {}
    case Noviembre {}
    case Diciembre {}
}

procedure EscribirFecha_(fecha){
    
    
    EscribirFechaConDia_Mes_Año_(dia(fecha), mes(fecha), año(fecha))
}


procedure EscribirFechaConDia_Mes_Año_(dia, mes, año){
    
    miFecha := Fechas(
        dia <- dia,
        mes <- mes,
        año <- año
        )
    
    Poner_DeColor_(dia(miFecha), Azul)
    Mover(Este)
    Poner_DeColor_(representacionNumericaDelMes_(mes(miFecha)), Rojo)
    Mover(Este)
    Poner_DeColor_(año(miFecha), Negro)
}

function representacionNumericaDelMes_(mes){
    return(
        choose
            1 when (mes == Enero)
            2 when (mes == Febrero)
            3 when (mes == Marzo)
            4 when (mes == Abril)
            5 when (mes == Mayo)
            6 when (mes == Junio)
            7 when (mes == Julio)
            8 when (mes == Agosto)
            9 when (mes == Septiembre)
            10 when (mes == Octubre)
            11 when (mes == Noviembre)
            12 otherwise
        )
}




