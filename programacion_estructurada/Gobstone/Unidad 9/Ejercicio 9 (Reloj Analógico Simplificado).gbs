}

procedure DibujarLasSeis(){
    AvanzarDosPasosAlSur()
    PonerSeisBolitasDeColorRojo()
    AvanzarDosPasosAlNorte()
}

procedure DibujarLasNueve(){
    AvanzarDosPasosAlOeste()
    PonerNueveBolitasDeColorRojo()
